.personalConatiner {
    display: flex;
    flex-direction: column;
}

page {
    background: #f6f6f6;
}

.personalListPd {
    margin: -40rpx 28rpx 0;
    box-shadow: 0 5rpx 30rpx rgba(0,0,0,0.2);
    background: #fff;
    border-radius: 10rpx;
    position: relative;
    z-index: 1;
}

.activeBannerPd {
    margin: 28rpx;
}

.activeBannerPd image {
    width: 100%;
    height: 160rpx;
}

.personalBg {
    background: #fff;
}

.headBg {
    width: 100%;
    height: 500rpx;
    text-align: center;
    position: relative;
}

.headBg image.headBgImg {
    width: 100%;
    height: 500rpx;
}

.headBg image.headLogo {
    width: 120rpx;
    height: 120rpx;
    border-radius: 100%;
    display: block;
    margin: 0 auto;
}

.headBgPd {
    display: flex;
    flex-direction: column;
    position: absolute;
    left: 0;
    top: 90rpx;
    width: 100%;
}

.headBg text {
    color: #333;
    font-size: 34rpx;
}

.headBg text.dz {
    display: inline-block;
    margin-left: 30rpx;
    line-height: 120rpx;
}

.headBg view.names {
    text-align: center;
    line-height: 52rpx;
    /* margin: 0 0 0 30rpx; */
    display: inline-block;
}

.headBg view.names text {
    color: #333;
    font-size: 34rpx;
    line-height: 120rpx;
}

.headBg view.names image {
    width: 12rpx;
    height: 22rpx;
    margin-left: 5rpx;
    vertical-align: middle;
}

.personalList {
    margin: 0 28rpx;
    padding: 35rpx 0;
    border-top: 1px solid #eaeaea;
}

.personalIcon {
    width: 36rpx;
    height: 36rpx;
    margin-right: 15rpx;
    vertical-align: middle;
}

.personalList text {
    color: #333;
    font-size: 30rpx;
}

.personalRight {
    float: right;
    width: 15rpx;
    height: 28rpx;
    vertical-align: middle;
    margin-top: 12rpx;
}
.content-top-img{
  width:130rpx !important;
  height:130rpx !important;
  border-radius:50% !important;
}
.content-top-name{
  line-height:100rpx;
}